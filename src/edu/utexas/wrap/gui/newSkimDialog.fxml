<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox minHeight="-Infinity" prefHeight="200.0" prefWidth="100.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utexas.wrap.gui.NewSkimController">
   <children>
      <Label layoutX="20.0" layoutY="20.0" text="Skim ID:" />
      <HBox layoutX="20.0" layoutY="37.0" spacing="10.0">
         <children>
            <TextField id="skimSourcePath" fx:id="skimID" minWidth="-Infinity" onAction="#changeSkimSourceURI" prefHeight="25.0" prefWidth="250.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <Label text="Data Source:" />
      <HBox spacing="10.0">
         <children>
            <TextField id="skimSourcePath" fx:id="skimSourceURI" disable="true" editable="false" minWidth="-Infinity" onAction="#changeSkimSourceURI" prefHeight="25.0" prefWidth="250.0" HBox.hgrow="ALWAYS" />
            <Button id="skimSourceBrowse" fx:id="skimSourceBrowse" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#browseSkim" prefWidth="70.0" text="Browse..." />
         </children>
      </HBox>
      <Label text="Assigner:">
         <padding>
            <Insets top="5.0" />
         </padding>
      </Label>
      <HBox VBox.vgrow="NEVER">
         <children>
            <ComboBox fx:id="skimAssignerChooser" onAction="#changeSkimAssigner" prefHeight="25.0" prefWidth="200.0" />
         </children>
      </HBox>
      <Label text="Skim Function:">
         <padding>
            <Insets top="5.0" />
         </padding>
      </Label>
      <HBox prefHeight="50.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <ComboBox fx:id="skimFunctionChooser" onAction="#changeSkimFunction" prefHeight="25.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
